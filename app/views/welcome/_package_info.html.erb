<div class="col-lg-12">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">Package Information</div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="row">
              <div class="col-lg-3">
                <div class="form-group">
                  <label> Weight: </label>
                  <%= text_field_tag('package[weight]', '', class: 'form-control') %>
                </div>
              </div>

              <div class="col-lg-3">
                <div class="form-group">
                  <label> Length: </label>
                  <%= text_field_tag('package[dimensions][length]', '', class: 'form-control') %>
                </div>
              </div>

              <div class="col-lg-3">
                <div class="form-group">
                  <label> Width: </label>
                  <%= text_field_tag('package[dimensions][width]', '', class: 'form-control') %>
                </div>
              </div>

              <div class="col-lg-3">
                <div class="form-group">
                  <label> Height: </label>
                  <%= text_field_tag('package[dimensions][height]', '', class: 'form-control') %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-3">
                <%= check_box_tag 'package[unpackaged]', false, class: 'accept_tos' %>
                <label> Unpackaged </label>
              </div>

              <div class="col-lg-3">
                <%= check_box_tag 'package[mailing_tube]', false, class: 'accept_tos' %>
                <label> Maling Tube </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>